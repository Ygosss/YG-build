// tsconfig.json
{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* การตั้งค่าสำหรับการย้ายโค้ด (ตาม Checklist) */
    "allowJs": true,
    "checkJs": false,

    /* Alias (ถ้ามี) */
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}